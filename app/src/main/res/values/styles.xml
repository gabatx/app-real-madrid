<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- imageView con radius -->
    <style name="esquinasRedondeadas" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <!-- Color del cursor -->
    <style name="cursorLogin" parent="">
        <item name="colorControlActivated">@color/linea_input</item>
    </style>

    <!-- Color del cursor contacto -->
    <style name="cursorLoginContacto" parent="">
        <item name="colorControlActivated">@color/linea_input_contacto</item>
    </style>

    <!-- Le da un borde al input cuando se selecciona -->
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- AÃ±adir fuente por defecto a la app -->
    <style name="RobotoRegular">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/RobotoRegular</item>
        <item name="buttonStyle">@style/RobotoRegular</item>
        <item name="android:fontFamily">@style/RobotoRegular</item>
    </style>
    <!-- Alert Dialog personalizado -->
    <style name="temaAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/azul</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Toolbar personalizado -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>


</resources>